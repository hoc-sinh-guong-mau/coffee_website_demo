generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  STAFF
  MANAGER
}

enum PaymentMethod {
  CASH
  CARD
  BANKING
}

enum OrderItemStatus {
  PENDING
  PROCESSING
  DONE
  CANCELED
}

enum Size {
  S
  M
  L
}

model User {
  id        Int       @id @default(autoincrement())
  fullname  String
  phone     String    @unique
  email     String    @unique
  password  String
  role      Role

  Customer  Customer?
  Staff     Staff?
  Manager   Manager?
}

model Customer {
  id      Int     @id
  user    User    @relation(fields: [id], references: [id])
  orders  Order[]
}

model Staff {
  id      Int     @id
  user    User    @relation(fields: [id], references: [id])
  salary  Int
  orders  Order[]
}

model Manager {
  id       Int      @id
  user     User     @relation(fields: [id], references: [id])
  salary   Int
  reports  Report[]
}

model Order {
  id              Int          @id @default(autoincrement())
  customerId      Int
  staffId         Int?
  total           Int
  createdAt DateTime
  paymentMethod   PaymentMethod

  customer        Customer     @relation(fields: [customerId], references: [id])
  staff           Staff?       @relation(fields: [staffId], references: [id])
  orderMenus      OrderMenu[]
}

model OrderMenu {
  id         Int             @id @default(autoincrement())
  orderId    Int
  menuItemId Int
  quantity   Int
  price      Int
  size       Size
  note       String?
  status     OrderItemStatus @default(PENDING)

  order      Order           @relation(fields: [orderId], references: [id])
  menuItem   MenuItem        @relation(fields: [menuItemId], references: [id])
}

model MenuItem {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Int
  categoryId  Int
  imageURL   String

  category    Category    @relation(fields: [categoryId], references: [id])
  orderMenus  OrderMenu[]
}

model Category {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  menuItems MenuItem[]
}

model Ingredient {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  inventories Inventory[]
}

model Inventory {
  id            Int        @id @default(autoincrement())
  ingredientId  Int
  name          String
  quantity      Int
  reorderLevel  Int

  ingredient    Ingredient @relation(fields: [ingredientId], references: [id])
  reports       Report[]
}

model Report {
  id          Int        @id @default(autoincrement())
  managerId   Int
  inventoryId Int

  manager     Manager    @relation(fields: [managerId], references: [id])
  inventory   Inventory  @relation(fields: [inventoryId], references: [id])
}
